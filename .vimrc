" Absolute and relative line numbers
set number relativenumber

" Enable mouse in all modes
set mouse=a

" Enable syntax highlighting
syntax on

" Ignore case-sensitivity unless explictly using capitals
set ignorecase
set smartcase

" Always use unicode
set encoding=utf-8

" Force true colour in the terminal
set termguicolors

